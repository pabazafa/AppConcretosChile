<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principales.SeleccionarTipo">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/config"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/boton_configuracion"
                android:src="@drawable/configuraciones"
                tools:ignore="MissingConstraints" />

            <Space android:layout_width="250dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:contentDescription="@string/empresa_imagen"
                android:src="@drawable/empresa"
                tools:ignore="MissingConstraints" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/TextViewTítulo"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="SELECCIONE UN TIPO"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="35sp"
                tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnSelecConcretoFC"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/black"
                android:fontFamily="sans-serif-black"
                android:text="@string/concreto_fc_kg_m2"
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:ignore="MissingConstraints,TextSizeCheck,VisualLintButtonSize" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnSelecPorVolumenes"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/black"
                android:fontFamily="sans-serif-black"
                android:text="Concreto En Volumenes"
                android:textColor="@color/white"
                android:textSize="25sp"

                tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck,VisualLintButtonSize" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnSelecHormigon"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/black"
                android:fontFamily="sans-serif-black"
                android:text="Hormigón"
                android:textColor="@color/white"
                android:textSize="30sp"

                tools:ignore="HardcodedText,MissingConstraints,VisualLintButtonSize" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnSelecMortero"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/black"
                android:fontFamily="sans-serif-black"
                android:text="Morteros"
                android:textColor="@color/white"
                android:textSize="30sp"

                tools:ignore="HardcodedText,MissingConstraints,VisualLintButtonSize" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnSelecMetrado"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/black"
                android:fontFamily="sans-serif-black"
                android:text="Metrado Cúbico"
                android:textColor="@color/white"
                android:textSize="30sp"

                tools:ignore="HardcodedText,MissingConstraints,VisualLintButtonSize" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnSelecCalcVolumen"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/black"
                android:fontFamily="sans-serif-black"
                android:text="Calcular Volúmen"
                android:textColor="@color/white"
                android:textSize="30sp"

                tools:ignore="HardcodedText,MissingConstraints,VisualLintButtonSize" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>